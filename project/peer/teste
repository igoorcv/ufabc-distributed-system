import java.io.*;
import java.net.*;
import java.rmi.Naming;
import java.rmi.RemoteException;
import java.rmi.registry.LocateRegistry;
import java.rmi.registry.Registry;

interface FileTransfer extends java.rmi.Remote {
    byte[] downloadFile(String filename) throws RemoteException;
}

public class Peer {
    public static void main(String[] args) {
        try {
            // Obter uma referência para o objeto remoto no servidor
        	FileTransfer fileTransfer = (FileTransfer) Naming.lookup("rmi://localhost/FileTransfer");

            // Nome do arquivo que deseja baixar
            String filename = "example.txt";

            // Chamar o método remoto para baixar o arquivo
            byte[] fileData = fileTransfer.downloadFile(filename);

            // Salvar o arquivo recebido
            FileOutputStream fos = new FileOutputStream(filename);
            fos.write(fileData);
            fos.close();

            System.out.println("Arquivo " + filename + " baixado com sucesso.");

        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
